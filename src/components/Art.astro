---
import { Image } from "astro:assets";
import { featureLists, goodLists } from "../data/navigation";
import checkImage from "../public/images/check.png";
import underImgImage from "../public/images/under-img.jpg";
---

<>
  <section id="art">
    <div class="container mx-auto h-full pt-20">
      <h2 class="will-fade">The ART</h2>

      <div class="content">
        <ul class="space-y-4 will-fade">
          {
            goodLists.map((feature, index) => (
              <li class="flex items-center gap-2">
                <Image src={checkImage} alt="check" />
                <p>{feature}</p>
              </li>
            ))
          }
        </ul>

        <div class="cocktail-img">
          <Image
            src={underImgImage}
            alt="cocktail"
            class="abs-center masked-img size-full object-contain"
          />
        </div>

        <ul class="space-y-4 will-fade">
          {
            featureLists.map((feature, index) => (
              <li class="flex items-center justify-start gap-2">
                <Image src={checkImage} alt="check" />
                <p class="md:w-fit w-60">{feature}</p>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="masked-container">
        <h2 class="will-fade">Sip-Worthy Perfection</h2>
        <div id="masked-content">
          <h3>Made with Craft, Poured with Passion</h3>
          <p>
            This isn’t just a drink. It’s a carefully crafted moment made just
            for you.
          </p>
        </div>
      </div>
    </div>
  </section>
  <script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    // Mobile detection function
    function isMobile() {
      return window.matchMedia("(max-width: 767px)").matches;
    }

    // Initialize animations
    function initArtAnimations() {
      const artSection = document.querySelector("#art");
      const willFadeElements = document.querySelectorAll(".will-fade");
      const maskedImg = document.querySelector(".masked-img");
      const maskedContent = document.querySelector("#masked-content");

      if (!artSection || !maskedImg || !maskedContent) {
        console.warn("Art section elements not found");
        return;
      }

      try {
        const start = isMobile() ? "top 20%" : "top top";

        const maskTimeline = gsap.timeline({
          scrollTrigger: {
            trigger: "#art",
            start,
            end: "bottom center",
            scrub: 1.5,
            pin: true,
          },
        });

        maskTimeline
          .to(".will-fade", {
            opacity: 0,
            stagger: 0.2,
            ease: "power1.inOut",
          })
          .to(".masked-img", {
            scale: 1.3,
            maskPosition: "center",
            maskSize: "400%",
            duration: 1,
            ease: "power1.inOut",
          })
          .to("#masked-content", {
            opacity: 1,
            duration: 1,
            ease: "power1.inOut",
          });
      } catch (error) {
        console.error("Error setting up art section animations:", error);
      }
    }

    // Initialize when DOM is ready
    if (document.readyState === "loading") {
      document.addEventListener("DOMContentLoaded", initArtAnimations);
    } else {
      initArtAnimations();
    }
  </script>
</>
